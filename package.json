{
    "name": "backend-api",
    "type": "module",
    "module": "src/index.ts",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "bun ./builder.ts",
        "postbuild": "tsc -p tsconfig.build.json",
        "dev": "bun run --hot src/index.ts",
        "format": "prettier --write .",
        "lint": "eslint . --ext .ts --fix",
        "start": "bun run src/index.ts",
        "clean": "rm -rf node_modules dist"
    },
    "dependencies": {
        "@aws-sdk/client-sesv2": "^3.821.0",
        "@hono/swagger-ui": "^0.5.1",
        "@hono/zod-validator": "^0.5.0",
        "@scalar/hono-api-reference": "^0.8.10",
        "esbuild": "^0.25.5",
        "hono": "^4.7.11",
        "hono-openapi": "^0.4.8",
        "hyperflake": "^0.1.4",
        "ioredis": "^5.6.1",
        "mustache": "^4.2.0",
        "napi-nanoid": "^0.2.0",
        "node-fetch": "^2.7.0",
        "ottoman": "^2.5.2",
        "pino": "^9.7.0",
        "zod": "^3.25.49",
        "zod-openapi": "^4.2.4"
    },
    "peerDependencies": {
        "typescript": "^5.8.2"
    },
    "devDependencies": {
        "@bravo68web/eslint-config": "^1.2.5",
        "@bravo68web/prettier-config": "^1.2.6",
        "@bravo68web/tsconfig": "^1.2.5",
        "@types/bun": "^1.2.15",
        "@types/node-fetch": "^2.6.12",
        "@types/swagger-ui-dist": "^3.30.5",
        "eslint": "^8.57.1",
        "prettier": "^3.5.3",
        "type-fest": "^4.41.0",
        "typescript": "^5.8.3"
    },
    "eslintConfig": {
        "extends": "@bravo68web/eslint-config",
        "rules": {
            "unicorn/filename-case": "off"
        }
    }
}
