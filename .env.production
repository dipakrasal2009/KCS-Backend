# Production Environment Configuration for WebRTC Video Conferencing

# Server Configuration
NODE_ENV=production
PORT=4500
SOCKET_IO_PORT=4501

# Database Configuration
COUCHBASE_CONNECTION_STRING=couchbase://your-couchbase-cluster
COUCHBASE_USERNAME=your-username
COUCHBASE_PASSWORD=your-password
COUCHBASE_BUCKET=kcs-production

# Redis Configuration (for session management and caching)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-redis-password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=24h

# MediaSoup WebRTC Configuration
MEDIASOUP_LISTEN_IP=0.0.0.0
MEDIASOUP_ANNOUNCED_IP=your-server-public-ip
MEDIASOUP_MIN_PORT=40000
MEDIASOUP_MAX_PORT=40100
MEDIASOUP_WORKER_COUNT=4

# TURN/STUN Server Configuration (for NAT traversal)
TURN_SERVER_URL=turn:your-turn-server.com:3478
TURN_SERVER_USERNAME=your-turn-username
TURN_SERVER_PASSWORD=your-turn-password
STUN_SERVER_URL=stun:stun.l.google.com:19302

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# File Upload Configuration
MAX_FILE_SIZE=100MB
UPLOAD_DIR=/app/uploads
RECORDINGS_DIR=/app/recordings

# Email Configuration (for notifications)
SMTP_HOST=your-smtp-server.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password

# AWS S3 Configuration (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket
AWS_REGION=us-east-1

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
CORS_ORIGIN=https://your-frontend-domain.com
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-mobile-app.com

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# WebRTC Security
ENABLE_RECORDING_ENCRYPTION=true
RECORDING_ENCRYPTION_KEY=your-encryption-key-for-recordings

# Performance Tuning
MAX_CONCURRENT_MEETINGS=1000
MAX_PARTICIPANTS_PER_MEETING=100
CONNECTION_TIMEOUT=30000
PING_TIMEOUT=60000
PING_INTERVAL=25000
